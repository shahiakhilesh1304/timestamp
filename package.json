{
  "name": "timestamp",
  "version": "1.0.0",
  "description": "A customizable time tracking app with countdowns, timers, and world clocks featuring multiple visual themes and instant URL sharing",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint --no-warn-ignored 'src/**/*.ts'",
    "lint:all": "eslint --no-warn-ignored 'src/**/*.ts' 'scripts/**/*.ts'",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "pretest:e2e": "npm run theme sync:fixtures",
    "test:e2e": "playwright test --project=chromium --timeout=15000 --retries=0 --workers=4 --grep-invert '@perf' --reporter=dot",
    "test:e2e:cross-browser": "playwright test --timeout=30000 --retries=1 --grep-invert '@perf' --reporter=dot",
    "test:e2e:perf": "playwright test --project=chromium --timeout=360000 --retries=0 --workers=1 --grep '@perf' --reporter=list",
    "test:e2e:perf:quick": "playwright test --project=chromium --timeout=60000 --retries=0 --workers=4 --grep '@perf-quick' --reporter=list",
    "test:e2e:perf:deep": "playwright test --project=chromium --timeout=360000 --retries=0 --workers=1 --grep '@perf-deep' --reporter=list",
    "test:e2e:perf:all": "playwright test --project=chromium --timeout=360000 --retries=0 --workers=1 --grep '@perf' --reporter=list",
    "test:e2e:full": "playwright test --reporter=dot",
    "typecheck": "tsc --noEmit",
    "typecheck:scripts": "tsc --noEmit -p tsconfig.scripts.json",
    "validate:scripts": "tsc --noEmit -p tsconfig.scripts.json && eslint --no-warn-ignored 'scripts/**/*.ts'",
    "validate:iteration": "npm run typecheck && npm run validate:scripts && npm run lint && npm run test && npm run theme validate:colors -- --allow-failures && npm run build && npm run test:e2e",
    "validate:full": "npm run typecheck && npm run validate:scripts && npm run lint && npm run knip:production && npm run test && npm run theme validate:colors -- --allow-failures && npm run build && npm run test:e2e:full",
    "knip:production": "knip --production",
    "test:stryker": "stryker run",
    "theme": "tsx scripts/theme-cli.ts",
    "generate:og-images": "vite build && tsx scripts/utils/with-preview-server.ts scripts/image-generation/generate-og-images.ts"
  },
  "keywords": [
    "timestamp",
    "countdown",
    "timer",
    "world-clock",
    "github",
    "contribution-graph",
    "typescript"
  ],
  "author": "Chris Reddington",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.49.0",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@types/node": "^25.0.3",
    "@types/suncalc": "^1.9.2",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.28.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "jsdom": "^27.4.0",
    "knip": "^5.80.2",
    "markdownlint-cli": "^0.47.0",
    "postcss": "^8.5.6",
    "sass-embedded": "^1.97.2",
    "sharp": "^0.34.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16",
    "workbox-window": "^7.4.0"
  },
  "dependencies": {
    "@primer/octicons": "^19.21.1",
    "fireworks-js": "^2.10.8",
    "suncalc": "^1.9.0"
  }
}
